# *********************** GAMMA, KPOINTS, MDET, or KS ********************
ifneq (,$(findstring KPOINTS, ${METHOD}))
SOLVESH = M_diagonalization_Lowdin.o M_kspace_Lowdin.o M_density_matrix.o
endif
ifneq (,$(findstring MDET, ${METHOD}))
SOLVESH = M_diagonalization_Lowdin.o M_kspace_Lowdin.o M_density_matrix_MDET.o
endif
ifneq (,$(findstring KS, ${METHOD}))
SOLVESH = M_diagonalization_kpoints.o M_kspace.o
endif

all: libthd_SOLVESH.a

.PHONY: clean

clean:
	rm -rf *.a *.o *.mod *genmod.f90 *~

libthd_SOLVESH.a: $(SOLVESH)
	ar rcs $@ $^ && mv $@ ../libs && cp *.mod ../include

%.o: %.f90
	${F90} ${DEFS} ${FFLAGS} -c $< -I../include

%.o: %.F90
	${F90} ${DEFS} -I.. -I../.. ${FFLAGS} -c $< -I../include
